{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.pokemon:sandslash": {
      "arrays": {
        "materials": {
          "Array.materialVariants": [
            "Material.default"
          ]
        },
        "geometries": {
          "Array.geometryVariants": [
            "Geometry.default",
            "Geometry.halloween"
          ]
        },
        "textures": {
          "Array.textureVariants": [
            "Texture.default",
            "Texture.shiny_default",
            "Texture.halloween"
          ]
        }
      },
      "materials": [
        {
          "*": "Material.default"
        }
      ],
      "geometry": "Array.geometryVariants[v.skin_index]",
      "textures": [
        "Array.textureVariants[(v.skin_index==0 && query.property('pokeb:shiny') == false) ? 0:(v.skin_index==0 && query.property('pokeb:shiny') == true) ? 1:(v.skin_index==1) ? 2:0]"
      ]
    }
  }
}
